{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/approve-safe-pipes.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-layer-boundary.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-layer-boundary.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "Bash(*)",
      "WebFetch",
      "WebSearch",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__plugin_serena_serena__*",
      "mcp__plugin_context7_context7__*",
      "mcp__serena__*",
      "mcp__mcp-deepwiki__*",
      "mcp__Context7__*",
      "mcp__Claude_in_Chrome__*",
      "mcp__Claude_Preview__*",
      "mcp__mcp-registry__*"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(rm -rf /)"
    ]
  }
}
